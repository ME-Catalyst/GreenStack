# GreenStack Frontend npm Configuration
# Created: 2025-11-25
# Purpose: Fix optional dependencies issues with Rollup on Windows

# Fix for @rollup/rollup-win32-x64-msvc optional dependency issues
legacy-peer-deps=true
auto-install-peers=true
engine-strict=false

# Improve installation reliability
prefer-offline=false
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Cache configuration for faster installs
cache-min=86400
